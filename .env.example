# DreamAware Runtime Policy Configuration

# Policy evaluation mode: 'enforce', 'warn', 'report-only'
POLICY_EVAL_MODE=report-only

# WebAssembly policy module path (optional)
POLICY_WASM_PATH=/policies/security.wasm

# SHA256 hash of the policy WASM module for integrity verification
POLICY_WASM_SHA256=

# Content Security Policy settings
CSP_REPORT_ONLY=true
CSP_REPORT_URI=/api/csp-report

# Security Headers Configuration
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Audit and Logging
AUDIT_LOG_LEVEL=info
AUDIT_RETENTION_DAYS=30
LEGAL_ACK_REQUIRED=true

# WebSocket Configuration  
WS_MAX_CONNECTIONS=1000
WS_MESSAGE_SIZE_LIMIT=1048576
WS_RATE_LIMIT_PER_SEC=60

# Resource Limits
MAX_MEMORY_MB=512
MAX_CPU_PERCENT=80
MAX_DISK_MB=1000

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_THRESHOLD_MS=1000

# Environment
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Security Features
ENABLE_CORS=false
CORS_ORIGIN=
ENABLE_HELMET=true
ENABLE_COMPRESSION=true