{
  "name": "ws-backpressure-starter",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/dist/index.js",
    "dev": "tsc-watch --project server/tsconfig.json --onSuccess \"node server/dist/index.js\"",
    "build": "npm run build:static",
    "build:static": "mkdir -p dist && cp index.html dist/ && cp -r public/* dist/ 2>/dev/null || true",
    "build:server": "tsc --project server/tsconfig.json",
    "build:client": "cd client && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ws": "^8.18.3",
    "zod": "^4.1.11"
  }
}
