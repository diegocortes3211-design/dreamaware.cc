{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lesson",
  "description": "Represents a single lesson.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the lesson."
    },
    "source": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of the source material (e.g., 'url', 'file')."
        },
        "value": {
          "type": "string",
          "description": "The value of the source (e.g., the URL, the file path)."
        }
      },
      "required": ["type", "value"]
    },
    "title": {
      "type": "string",
      "description": "The title of the lesson."
    },
    "state": {
      "type": "string",
      "description": "The current state of the lesson (e.g., 'practice', 'review')."
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "An ordered list of step IDs."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "The ISO 8601 timestamp of when the lesson was created."
    }
  },
  "required": ["id", "source", "title", "state", "steps", "created_at"]
}